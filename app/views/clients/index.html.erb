<h1 class="h3 mb-2 text-gray-800">Clientes</h1>

<div class="mb-1">
  <%= link_to new_client_path, remote: true, class: 'btn btn-info', id: 'add-cliente-btn' do %>
    <span class='fas fa-plus-square'></span>
  <% end %>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tabelaClientes" class="table table-bordered" width="100%">
        <thead>
          <tr>
            <th style='width:1%; text-align:center'>#</th>
            <th style='width:54%;'>Nome</th>
            <th style='width:20%;' >Telefone</th>
            <th style='width:10%;' >Cadastro</th>
            <th style='width:15%; text-align:center'>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @clientes.each do |cli|%>
            <tr id="cliente_<%= cli.id %>">
              <td style="text-align:center"><%= cli.id %></td>
                <td><%= cli.nome %></td>
                <td><%= cli.telefone %></td>
                <td><%= cli.created_at.strftime("%d/%m/%Y") %></td>
                <td style="text-align:center">
                  <%= link_to 'Editar', edit_client_path(cli), class: 'btn btn-info btn-sm', remote: true %>
                  <%= link_to 'Excluir', cli, remote: true, method: :delete, data: {confirm: "Deseja excluir o cliente: #{cli.nome}?"}, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%= render 'modal_clientes' %>
