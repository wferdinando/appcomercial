<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), class:"user", html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-user", placeholder:"Insira seu e-mail" %>
  </div>
  <br />
  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-user btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
