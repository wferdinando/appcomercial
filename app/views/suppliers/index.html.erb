<h1 class="h3 mb-2 text-gray-800">Fornecedores</h1>

<div class="mb-1">
  <%= link_to new_supplier_path, remote: true, class: 'btn btn-info', id: 'add-fornecedor-btn' do %>
    <span class='fas fa-plus-square'></span>
  <% end %>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table id="tabelaFornecedores" class="table table-bordered" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th style='width:1%; text-align:center'>#</th>
            <th style='width:54%;'>Nome</th>
            <th style='width:20%;' >Telefone</th>
            <th style='width:10%;' >Cadastro</th>
            <th style='width:15%; text-align:center'>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |sup|%>
            <tr id="fornecedor_<%= sup.id %>">
              <td style="text-align:center"><%= sup.id %></td>
                <td><%= sup.nome %></td>
                <td><%= sup.telefone %></td>
                <td><%= sup.created_at.strftime("%d/%m/%Y") %></td>
                <td style="text-align:center">
                  <%= link_to 'Editar', edit_supplier_path(sup), class: 'btn btn-info btn-sm', remote: true %>
                  <%= link_to 'Excluir', sup, remote: true, method: :delete, data: {confirm: "Deseja excluir o fornecedor: #{sup.nome}?"}, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%= render 'modal_fornecedores' %>
